<p id="notice"><%= notice %></p>

<p>
  <strong>ID:
  <%= @user.number %></strong>
</p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>
<% if @user.phone_number.present? %>
  <p>
    <strong>Phone number:</strong>
    <%= @user.phone_number %>
  </p>
<% end %>
<p>
  <strong>Total:</strong>
  $<%= sprintf("%.2f",@total) %>
</p>

<% if @user.paid? %>
  <h3 style="color: red">USER PAID</h3>
  <%= form_for @user, url: {action: "update"} do |f| %>
    <%= hidden_field(:paying_user, false) %>
    <%= f.submit "Unpay"%>
  <% end %>
<% else %>
  <%= form_for @user, url: {action: "update"} do |f| %>
    <%= hidden_field(:paying_user, true) %>
    <%= f.submit "User paid"%>
  <% end %>
<% end %>

<%= form_for @auction do |f| %>
  <%= hidden_field(:user, :id) %>

  <%= f.label :value %>:
  <%= f.text_field :value %>

  <%= f.label :name %>:
  <%= f.text_field :name %>

  <%= f.label :quantity %>:
  <%= f.text_field(:quantity, value: 1) %><br />

  <%= f.submit %>
<% end %>
<p> </p>
<table>
  <th>Name</th>
  <th>Price</th>
  <th>Paid</th>
  <% @auctions.each do |auction| %>
    <tr>
      <td><%= auction.name == "" ? "NO NAME" : auction.name %></td>
      <td>$<%= sprintf("%.2f",auction.value) %></td>
      <td><%= auction.paid ? "Paid" : "Not Paid" %></td>
      <td> <%= link_to 'delete', auction_path(auction), method: :delete, data: { confirm: 'Are you certain you want to delete this?' }
 %> </td>
    </tr>
  <% end %>
</table>
<p> </p>
<%= link_to 'Edit user', edit_user_path(@user) %>
